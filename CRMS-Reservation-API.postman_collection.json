{
  "info": {
    "_postman_id": "crms-reservation-collection-2025",
    "name": "CRMS Reservation API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for CRMS Reservation endpoints. Uses JWT authentication. Set api_url and jwt_token as environment variables."
  },
  "item": [
    {
      "name": "Create Reservation",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customerId\": 1,\n  \"tableId\": 2,\n  \"branchId\": 1,\n  \"reservationTime\": \"2025-09-18T19:00:00\",\n  \"partySize\": 4\n}"
        },
        "url": { "raw": "{{api_url}}/reservations", "host": ["{{api_url}}"], "path": ["reservations"] }
      }
    },
    {
      "name": "Update Reservation",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reservationTime\": \"2025-09-18T20:00:00\",\n  \"partySize\": 5\n}"
        },
        "url": { "raw": "{{api_url}}/reservations/1", "host": ["{{api_url}}"], "path": ["reservations", "1"] }
      }
    },
    {
      "name": "Cancel Reservation (PATCH)",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" }
        ],
        "url": { "raw": "{{api_url}}/reservations/1/cancel", "host": ["{{api_url}}"], "path": ["reservations", "1", "cancel"] }
      }
    },
    {
      "name": "Delete Reservation",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" }
        ],
        "url": { "raw": "{{api_url}}/reservations/1", "host": ["{{api_url}}"], "path": ["reservations", "1"] }
      }
    },
    {
      "name": "Get Reservation by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" }
        ],
        "url": { "raw": "{{api_url}}/reservations/1", "host": ["{{api_url}}"], "path": ["reservations", "1"] }
      }
    },
    {
      "name": "Get Reservations (Paginated)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{api_url}}/reservations?page=0&size=10",
          "host": ["{{api_url}}"],
          "path": ["reservations"],
          "query": [
            { "key": "page", "value": "0" },
            { "key": "size", "value": "10" }
          ]
        }
      }
    }
  ]
}
