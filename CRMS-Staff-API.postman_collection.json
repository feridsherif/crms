{
  "info": {
    "_postman_id": "crms-staff-collection-2025",
    "name": "CRMS Staff API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for CRMS Staff endpoints. Uses JWT authentication. Set api_url and jwt_token as environment variables."
  },
  "item": [
    {
      "name": "Get All Staff (Non-Paginated)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{api_url}}/staff",
          "host": ["{{api_url}}"],
          "path": ["staff"]
        }
      }
    },
    {
      "name": "Get Staff by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{api_url}}/staff/1",
          "host": ["{{api_url}}"],
          "path": ["staff", "1"]
        }
      }
    },
    {
      "name": "Get Staff (Paginated)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{api_url}}/staff/paginated?page=0&size=10",
          "host": ["{{api_url}}"],
          "path": ["staff", "paginated"],
          "query": [
            { "key": "page", "value": "0" },
            { "key": "size", "value": "10" }
          ]
        }
      }
    }
  ]
}