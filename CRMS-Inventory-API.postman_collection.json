{
  "info": {
    "_postman_id": "crms-inventory-collection-2025",
    "name": "CRMS Inventory API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for CRMS Inventory endpoints. Uses JWT authentication. Set api_url and jwt_token as environment variables."
  },
  "item": [
    {
      "name": "Get Inventory Item by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{api_url}}/inventory/1",
          "host": ["{{api_url}}"],
          "path": ["inventory", "1"]
        }
      }
    },
    {
      "name": "Get All Inventory Items (Non-Paginated)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{api_url}}/inventory",
          "host": ["{{api_url}}"],
          "path": ["inventory"]
        }
      }
    },
    {
      "name": "Get Inventory Items (Paginated)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{api_url}}/inventory/paginated?page=0&size=10",
          "host": ["{{api_url}}"],
          "path": ["inventory", "paginated"],
          "query": [
            { "key": "page", "value": "0" },
            { "key": "size", "value": "10" }
          ]
        }
      }
    }
  ]
}
